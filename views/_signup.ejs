<body>
    <main class="main color-change-2x">
        <div class="login-con shadow-drop-center">
             <form class="form">
                 <div class="input-group">
                     <input required="" type="text" name="name" class="input name">
                     <label class="user-label">name</label>
                   </div>
 
                   <div class="input-group">
                     <input required="" type="email" name="email" class="input email">
                     <label class="user-label">email</label>
                   </div>

                   <div class="input-group">
                    <input required="" type="password" name="password" class="input password">
                    <label class="user-label">password</label>
                  </div>
 
                 <div class="submit-btn"><input type="submit" value="signup➡️➡️" class="shake-horizontal">
                </div>
             </form>
        </div>
     </main>
